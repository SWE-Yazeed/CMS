<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - أمانة منطقة حائل</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    <link rel="stylesheet" href="~/css/homeLayout.css" /> <!-- رابط إلى ملف CSS الخارجي -->

</head>
<body>

    <!-- شريط التنقل -->
    <nav class="navbar navbar-expand-lg">
        <div class="header-container">
            <img src="~/images/امانة ابيض.png" />" alt="امانة منطقة حائل " >
        </div>
    </nav>
    
    <!-- شعار وزارة -->
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img class="vision-2020" src="~/images/شعار وزارة.png" alt="شعار وزارة ">
                </div>
            </div>
        </div>
    </header>




    <!-- العنوان الرئيسي مع رؤية 2030 -->
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img class="vision-2030" src="~/images/100.png" alt="رؤية 2030" >
                </div>
            </div>
        </div>
    </header>

    <div class="col-md-3" id="transactions-menu">
        <div class="dropdown">
            <button class="btn dropdown-toggle" type="button" id="transactionsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                الــمــعـامــلات
            </button>
            <div class="dropdown-menu w-100" aria-labelledby="transactionsDropdown">
               
              
                <a class="dropdown-item" href="@Url.Action("CreateTansactions", "Transaction")">إنشاء المعاملات</a>
                <a class="dropdown-item" href="@Url.Action("AllTransaction","Transaction")">كـامـل الـمـعـامـلات</a>
                <a class="dropdown-item" href="@Url.Action("TrackTransactions","Transaction")">المعاملات الصادرة</a>
                <a class="dropdown-item" href="@Url.Action("TransactionList","Transaction")">المعاملات الواردة</a>
                
            </div>

        </div>

    </div>


    <!-- محتوى الصفحة -->
    <div class="col-md-9">
        @RenderBody()
    </div>
      </div>
       </div>


    <!-- Logout Button -->
    <div class="logout-button">
        <form asp-action="Logout" method="post" onsubmit="return confirmLogout();">
            <button type="submit" class="btn btn-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                    <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                </svg>
            </button>
        </form>
    </div>


    <style>
        .logout-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
        }
    </style>



    <!-- الفوتر -->
    @* <footer class="footer">
    <p>&copy; 2024 أمانة منطقة حائل. جميع الحقوق محفوظة.</p>
    </footer> *@

    <!-- تحميل سكريبتات jQuery و Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function confirmLogout() {
            return confirm("هل أنت متأكد أنك تريد تسجيل الخروج؟");
        }
    </script>

</body>

