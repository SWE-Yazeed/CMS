@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewData["Title"] = "الصفحة الرئيسية - حساب";
}

<link rel="stylesheet" href="~/css/HomePage.css" /><!-- انتبه لحالة الحروف في المسارات حساس من ناحية الحرف -->

<<div class="slideshow-container">
    <div class="mySlides slide1">
        <img src="~/images/حايل مدينتي 4.jpg" alt="الصورة 1">
    </div>

    <div class="mySlides slide2">
        <img src="~/images/السعودية 2.jpg" alt="الصورة 2">
    </div>

    <div class="mySlides slide3">
        <img src="~/images/قلعة عيرف 4.jpg" alt="الصورة 3">
    </div>
</div>



@section Scripts {
    <script>
        let slideIndex = 0;
        showSlides();

        function showSlides() {
            let i;
            const slides = document.getElementsByClassName("mySlides");
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none"; // إخفاء جميع الشرائح
            }
            slideIndex++;
            if (slideIndex > slides.length) { slideIndex = 1 } // إعادة تعيين الفهرس
            slides[slideIndex - 1].style.display = "block"; // عرض الشريحة الحالية
            setTimeout(showSlides, 3000); // تغيير الشريحة كل 3 ثواني
        }
    </script>
}
